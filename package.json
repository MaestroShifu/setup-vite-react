{
  "name": "checkout-headless-frontend",
  "description": "",
  "author": "Daniel Sarmiento (MaestroShifu)",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc && vite build",
    "start": "vite preview",
    "dev": "vite",
    "test": "jest",
    "test:snapshots": "jest -u",
    "test:watch": "jest --watch",
    "coverage": "jest --coverage"
  },
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@rollup/plugin-babel": "^5.3.1",
    "@svgr/rollup": "^6.2.1",
    "@testing-library/dom": "^8.11.4",
    "@testing-library/jest-dom": "^5.16.3",
    "@testing-library/react": "^12.1.4",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.4.1",
    "@types/react": "^17.0.33",
    "@types/react-dom": "^17.0.10",
    "@vitejs/plugin-legacy": "^1.7.1",
    "@vitejs/plugin-react": "^1.0.7",
    "babel-jest": "^27.5.1",
    "jest": "^27.5.1",
    "react-test-renderer": "^17.0.2",
    "typescript": "^4.5.4",
    "vite": "^2.8.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts",
      "tsx",
      "jsx"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.(ts|tsx)$",
    "transform": {
      "^.+\\.(t|j)(s|sx)$": "babel-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.(t|j)(s|sx)"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/test/lib/jest-setup.ts"
    ],
    "moduleNameMapper": {
      "\\.svg": "<rootDir>/test/__mocks__/svg.ts",
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/test/__mocks__/file.ts",
      "\\.(css|less)$": "<rootDir>/test/__mocks__/style.ts"
    },
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "jsdom"
  }
}
